    "version": "0.2.0",
    "configurations": [
        {
            "name": "Unpack",
            "program": "${workspaceFolder}/unpack.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },

        {
            "name": "Pack",
            "program": "${workspaceFolder}/pack.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },

        {
            "name": "RLE -> BMP",
            "program": "${workspaceFolder}/rle2bmp.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },

        {
            "name": "BMP -> RLE",
            "program": "${workspaceFolder}/bmp2rle.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}